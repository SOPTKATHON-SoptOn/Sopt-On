<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp">

        <TextView
            android:id="@+id/main_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="박지혜"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/partition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:includeFontPadding="false"
            android:text="|"
            android:textColor="#707070"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@id/main_title"
            app:layout_constraintBottom_toBottomOf="@id/main_title"
            app:layout_constraintStart_toEndOf="@id/main_title"
            />

        <TextView
            android:id="@+id/main_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="75dp"
            android:includeFontPadding="false"
            android:text="오후 12시 58분 출석"
            android:textColor="@android:color/darker_gray"
            android:textSize="15sp"
            app:layout_constraintTop_toTopOf="@id/main_title"
            app:layout_constraintBottom_toBottomOf="@id/main_title"
            app:layout_constraintStart_toEndOf="@id/partition"
            />

        <ImageView
            android:id="@+id/main_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/adminlist_btn_green"
            app:layout_constraintTop_toTopOf="@id/main_title"
            app:layout_constraintBottom_toBottomOf="@id/main_title"
            app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
